{
  "manifest_version": 3,
  "name": "ILCS Customer Service Assistant",
  "version": "1.0",
  "description": "Customer service learning system with Dify integration",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "*://*.pinduoduo.com/*",
    "*://*.yangkeduo.com/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.pinduoduo.com/chat-merchant/*",
        "*://*.pinduoduo.com/chat-merchant/index.html*",
        "*://*.yangkeduo.com/chat-merchant/*"
      ],
      "js": ["src/content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/background/background.js"
  }
}
