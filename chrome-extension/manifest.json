{
  "manifest_version": 3,
  "name": "ILCS Customer Service Assistant",
  "version": "1.0",
  "description": "Customer service learning system with Dify integration",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "webNavigation",
    "tabs"
  ],
  "host_permissions": [
    "*://*.pinduoduo.com/*",
    "*://*.yangkeduo.com/*"
  ],
  "web_accessible_resources": [{
    "resources": ["src/content/content.js"],
    "matches": ["*://*.pinduoduo.com/*", "*://*.yangkeduo.com/*"]
  }],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "src/background/background.js"
  }
}
